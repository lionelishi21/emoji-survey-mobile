<?xml version='1.0' encoding='utf-8'?>
<widget id="app.happyreply.appfinity" version="4.0.0" versionCode="6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="VideoPlayer">
        <param name="android-package" value="com.moust.cordova.videoplayer.VideoPlayer" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="CordovaHttpPlugin">
        <param name="android-package" value="com.synconset.CordovaHttpPlugin" />
    </feature>
    <feature name="KioskPlugin">
        <param name="android-package" value="jk.cordova.plugin.kiosk.KioskPlugin" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SSLCertificateChecker">
        <param name="android-package" value="nl.xservices.plugins.SSLCertificateChecker" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Keyboard">
        <param name="android-package" onload="true" value="org.apache.cordova.labs.keyboard.Keyboard" />
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="com.nolanlawson.cordova.sqlite.SQLitePlugin" />
    </feature>
    <name>HappyReply</name>
    <description>
        Emoji survey app
    </description>
    <author email="support@appfinity.com" href="https://app.appfinity.com">
       AppFinity Technologies
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon density="mdpi" height="57" platform="android" src="static/icon/happyreply.png" width="57" />
    <allow-intent href="market:*" />
    <splash density="land-hdpi" src="static/screen/android/splash-xhdpi.png" />
    <splash density="land-ldpi" src="static/screen/android/splash-xhdpi.png" />
    <splash density="land-mdpi" src="static/screen/android/splash-xhdpi.png" />
    <splash density="land-xhdpi" src="static/screen/android/splash-xhdpi.png" />
    <splash density="land-xxhdpi" src="static/screen/android/splash-xxhdpi.png" />
    <splash density="land-xxxhdpi" src="static/screen/android/splash-xxxhdpi.png" />
    <splash density="port-hdpi" src="static/screen/android/splash.png" />
    <splash density="port-ldpi" src="static/screen/android/splash.png" />
    <splash density="port-mdpi" src="static/screen/android/splash.png" />
    <splash density="port-xhdpi" src="static/screen/android/splash.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="orientation" value="landscape" />
</widget>
